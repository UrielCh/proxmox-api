    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Generate APi",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/generator",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${workspaceFolder}/generator/src/gen.ts"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "run sample",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/api",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${workspaceFolder}/api/src/sample.ts"]
        }

    ]
}